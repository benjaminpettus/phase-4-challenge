<% include partials/header %>

<div class="row">
  <div class="col m3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
      </div>
      <div class="card-content white-text">
      </div>
      <div class="card-content white-text">
      </div>
      <div class="card-content white-text">
      </div>
      <div class="card-content white-text">
      </div>
    </div>
  </div>
  <div class="col m8">
    <div class="content container">
      <h5 class="title is-4">
        Hello
        <%- user.username %></h5>
        <p>email:
          <%- user.email %>
        </p>
        <small>
          Member Since :<br> <%- user.created_on %>
        </small>
    </div>

    <div class="container">
        <h4>Reviews</h4>
        <div class="review-container">
          <% reviews.forEach(function(review) { %>
            
              <div class="card horizontal">
                <div class="card-content">
                  <div class="row">
                    <h5 class="col"><%= review.title %></h5>
                    <p class="col"><%= review.created_on %></p>
                  </div>
                  <p><%= review.content %></p>
                  <p>by: <%= review.username %> </p>
                  <% if (locals.session && locals.session.passport.user == review.user_id) { %>
                    <a class="delete btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons" data-id="<%= review.id %>">delete_forever</i></a>
                    <% } %>
                </div>
              </div>
            
          <% }) %>
        </div>

      </div>

  </div>
</div>

<% include partials/footer %>
